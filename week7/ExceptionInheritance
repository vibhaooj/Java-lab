
// Custom Exception Class
class WrongAge extends Exception {
    public WrongAge(String message) {
        super(message);
    }
}

// Base Class
class Father {
    int fatherAge;

    Father(int age) throws WrongAge {
        if (age < 0) {
            throw new WrongAge("Father's age cannot be negative!");
        }
        fatherAge = age;
        System.out.println("Father age stored successfully.");
    }
}

// Derived Class
class Son extends Father {
    int sonAge;

    Son(int fAge, int sAge) throws WrongAge {
        super(fAge); // Call Father constructor

        if (sAge < 0) {
            throw new WrongAge("Son's age cannot be negative!");
        }
        if (sAge >= fAge) {
            throw new WrongAge("Son's age must be less than Father's age!");
        }

        sonAge = sAge;
        System.out.println("Son age stored successfully.");
    }
}

// MAIN class (must match filename)
public class ExceptionInheritanceDemo {
    public static void main(String[] args) {
        try {
            Son s1 = new Son(40, 20);  // Valid case
            System.out.println("Object created successfully.");
        } catch (WrongAge e) {
            System.out.println("Exception caught: " + e.getMessage());
        }

        // Another test
        try {
            Son s2 = new Son(30, 35);  // Invalid case
        } catch (WrongAge e) {
            System.out.println("Exception caught: " + e.getMessage());
        }
    }
}
